<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notly" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/screenBackground</item>
        <item name="colorOnPrimary">@color/text_black</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/screenBackground</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextView" parent="android:Widget.TextView">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="TextStyle.h1" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextStyle.h2" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TextStyle.h3" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextStyle.h4" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.h5" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.h6" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.poppinsThin" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.poppinsRegular" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.body1" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.body2" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PrimaryCancelButton" parent="PrimaryButton">
        <item name="android:background">@drawable/primary_cancel_button</item>
    </style>

    <style name="SecondaryButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.LightStatusBar" parent="Theme.Notly">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/screenBackground</item>
        <item name="android:windowFullscreen">false</item>
    </style>

</resources>



