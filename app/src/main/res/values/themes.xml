<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTextView" parent="android:Widget.TextView">

        <item name="android:textColor">@color/text_black</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="TextStyle.h1" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextStyle.h2" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextStyle.h3" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.h4" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.readexThin" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.readexRegular" parent="BaseTextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.body1" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.body2" parent="android:Widget.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PrimaryButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PrimaryCancelButton" parent="PrimaryButton">
        <item name="android:background">@drawable/primary_cancel_button</item>
    </style>

    <style name="SecondaryButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="textAllCaps">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
</resources>